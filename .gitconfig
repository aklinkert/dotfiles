[user]
	name = Alexander Pinnecke
	email = alexander.pinnecke@googlemail.com
[push]
	default = simple
	followTags = true
[core]
	excludesfile = ~/.gitignore_global
	mergeoptions = --no-edit
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[hub]
	protocol = ssh
[credential]
	helper = osxkeychain

[url "https://github.com/"]
	insteadOf = git@github.com:
[url "https://"]
	insteadOf = git://
